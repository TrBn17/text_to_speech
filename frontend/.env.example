# ===========================================
# Frontend Environment Configuration Template
# ===========================================
# Copy this file to .env and update the values

# API Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_API_TIMEOUT=30000

# Development Configuration
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# Application Configuration
REACT_APP_NAME=AI Text & Speech Platform
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Advanced AI-powered text generation and speech synthesis platform

# Default Settings
REACT_APP_DEFAULT_MAX_TOKENS=500
REACT_APP_DEFAULT_TEMPERATURE=0.7
REACT_APP_DEFAULT_TOP_P=0.9
REACT_APP_DEFAULT_TTS_VOICE=alloy
REACT_APP_DEFAULT_TTS_SPEED=1.0
REACT_APP_DEFAULT_TTS_PROVIDER=openai

# Feature Flags
REACT_APP_ENABLE_STREAMING=true
REACT_APP_ENABLE_FILE_UPLOAD=true
REACT_APP_ENABLE_TTS=true
REACT_APP_ENABLE_CONFIG_MANAGER=true

# File Upload Limits
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_MAX_FILES=10
REACT_APP_SUPPORTED_FILE_TYPES=.pdf,.docx,.doc,.txt,.png,.jpg,.jpeg,.bmp,.tiff

# UI Configuration
REACT_APP_THEME=default
REACT_APP_ENABLE_DARK_MODE=false
REACT_APP_ENABLE_ANIMATIONS=true

# Performance Settings
REACT_APP_DEBOUNCE_DELAY=300
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_CACHE_TTL=300000

# Analytics & Monitoring (if needed in future)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# Social & SEO
REACT_APP_SITE_URL=http://localhost:3000
REACT_APP_AUTHOR=AI Development Team
REACT_APP_KEYWORDS=AI,text generation,text-to-speech,OpenAI,Gemini